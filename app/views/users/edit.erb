<% @body_class = "edit" %>
<form method="post" action="/users/edit">
  <h2 class="form-signin-heading" id="edit-hdr">Edit Your Profile</h2>
  <div class="form-group" id="edit-form">
    <label for="exampleInputUsername1"></label>
    <input type="text" name="username" class="form-control" id="exampleInputUsername1" value="<%= current_user.username %>" placeholder="Username">
  </div>
  <div class="form-group" id="edit-form">
    <label for="exampleInputEmail1"></label>
    <input type="email" name="email" class="form-control" id="exampleInputEmail1" value="<%= current_user.email %>" placeholder="Email">
  </div>
  <div class="form-group" id="edit-form">
    <label for="exampleInputPassword1"></label>
    <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  </div>
  <div class="form-group">
    <label id="avatar-hdr" for="exampleInputFile">Upload Avatar</label>
    <input type="file" id="choose-file-btn">
    <p class="help-block" id="edit-avatar-info">Add an avatar for further profile customization.</p>
  </div>
  <button type="submit" class="btn btn-primary" id="edit-form-button">Update Profile</button>
</form>