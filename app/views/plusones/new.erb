<% if current_user.plusones.find(5).p_date == current_day %>

<% @body_class = "new" %>

<div class="new-plusone">
  <h2 id="new-hdr">Update <span class="main-color">+1</span> for <%= current_day.strftime("%A") %></h2>
  <form method="post" action="/plusones/new">

    <textarea class="form-control" name="description" id="new-plusone-textarea" rows="5" placeholder="Leave a comment about your workout or your dietary guilty pleasure..." ></textarea>
    <button class="btn btn-success" name="score" value="1" id="new-plusone-btn" type="submit">Feeling pumped!</button>
    <br>
    <button class="btn btn-danger" name="score" value="-1" id="new-plusone-btn" type="submit">Moment of weakness!</button>
  </form>
  <% current_user.plusones.each do |p_one| %>
  <div class="list-group">
    <a href="#" class="list-group-item">
      <p class="list-group-item-text"><%= p_one.description %> <strong><%= p_one.score %></strong></p>
    </a>
    </div> 
  <% end %>
</div>

<% else %>

<% @body_class = "new" %>

<div class="new-plusone">
  <h2 id="new-hdr">Add <span class="main-color">+1</span> for <%= current_day.strftime("%A") %></h2>
  <form method="post" action="/plusones/new">

    <textarea class="form-control" name="description" id="new-plusone-textarea" rows="10" placeholder="Leave a comment about your workout or your dietary guilty pleasure..." ></textarea>
    <button class="btn btn-success" name="score" value="1" id="new-plusone-btn" type="submit">Feeling pumped!</button>
    <br>
    <button class="btn btn-danger" name="score" value="-1" id="new-plusone-btn" type="submit">Moment of weakness!</button>
  </form>
</div>

<% end %>

